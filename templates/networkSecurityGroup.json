{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "3.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "createdBy": {
            "type": "string"
        },
        "courseDate": {
            "type": "string"
        },
        "resourceGroupCleanup": {
            "type": "string"
        },
        "osPlatform": {
            "type": "string"
        }
    },
    "variables": {
        "nsgName": "[concat(resourceGroup().name, '-nsg')]",
        "allowRDP": {
            "securityRules": [
                {
                    "name": "Allow-RDP",
                    "properties": {
                        "priority": 300,
                        "protocol": "Tcp",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourceAddressPrefix": "*",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*",
                        "destinationPortRange": "3389"
                    }
                }
            ]
        },
        "allowSSH": {
            "securityRules": [
                {
                    "name": "Allow-SSH",
                    "properties": {
                        "priority": 310,
                        "protocol": "Tcp",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourceAddressPrefix": "*",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*",
                        "destinationPortRange": "22"
                    }
                }
            ]
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-08-01",
            "name": "[variables('nsgName')]",
            "location": "[parameters('location')]",
            "tags": {
                "Displayname": "Network Security Group",
                "Dept": "[resourceGroup().tags['Dept']]",
                "Created By": "[parameters('createdBy')]",
                "Course Date": "[concat('WC-', parameters('courseDate'))]",
                "Cleanup": "[parameters('resourceGroupCleanup')]"
            },
            "properties": "[if(equals(parameters('osPlatform'), 'Windows'), variables('allowRDP'), variables('allowSSH'))]"
        }
    ],
    "outputs": {
        "nsgId": {
            "type": "object",
            "value": "[reference(resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName')))]"
        },
        "nsgRules": {
            "type": "array",
            "value": "[reference(resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))).securityRules]"
        }
    }
}